      @media screen and (max-width: 480px)
        width 100%
        height 100%
        min-height 480px
        position absolute
        top 0
        bottom 0
        border-radius 0

    .auth0-lock-widget-container
      //mobile view
      @media screen and (max-width: 480px)
        height 100%
        border-radius 0

    .auth0-lock-cred-pane
      //mobile view
      @media screen and (max-width: 480px)
        min-height 480px
        border-radius 0

    .auth0-lock-content
      //mobile view
      @media screen and (max-width: 480px)
        width 100%
        position absolute
        top 53.5%
        -webkit-transform translateY(-50%)
        transform translateY(-50%)

      .auth0-lock-form p
        @media screen and (max-width: 480px)
          font-size 14px


    .auth0-lock-terms
      @media screen and (max-width: 480px)
        position absolute
        bottom 70px
        width 100%
        -webkit-box-sizing border-box
        -moz-box-sizing border-box
        box-sizing border-box

    .auth0-lock-submit
