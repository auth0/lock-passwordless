      visibility visible
      top 19px

    .auth0-lock-search
      background-color #E3E5E9
      padding 10px

    .auth0-lock-input-wrap
      margin 0
      border none
      margin-left 40px

    .auth0-lock-icon
      width 16px
      height 16px
      top 12px
      left 9px
