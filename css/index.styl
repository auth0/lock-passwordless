        animation fadeOutDownBig 1s both

    .auth0-loading-container
      -webkit-animation fadeInDownBig 1s both
      animation fadeInDownBig 1s both
      display block

    .auth0-lock-back-button
      opacity 0
      visibility hidden
      -webkit-transition .25s
      transition .25s


