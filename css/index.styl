    display none

    .auth0-loading
      position absolute
      top 4px
      left 44%
      width 30px
      height 30px
      border-width 2px
      border-style solid
      border-color rgba(0,0,0,.4) rgba(0,0,0,.4) rgba(0,0,0,.2) rgba(0,0,0,.2)
      opacity .9
      border-radius 20px
      -webkit-animation rotate 1s linear infinite
