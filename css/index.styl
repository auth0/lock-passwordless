  // Lock confirmation content


  .auth0-lock-confirmation
    background-color white
    position absolute
    text-align center
    line-height 2
    font-size 14px
    color #666
    width 100%
    height 100%
    top 0
    left 0
    z-index 200
    border-radius 5px
    .auth0-lock-confirmation-content
